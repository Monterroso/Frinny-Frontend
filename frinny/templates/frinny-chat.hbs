<div class="frinny-chat-container">
    <div class="avatar-panel">
        <img src="{{avatarUrl}}" alt="Frinny" class="frinny-avatar" />
        <button class="avatar-toggle" title="{{localize 'frinny.ui.toggleAvatar'}}">
            <i class="fas fa-chevron-left"></i>
        </button>
    </div>
    <div class="chat-panel">
        <div class="message-history">
            {{#each messages}}
                <div class="message {{type}}" data-message-id="{{messageId}}">
                    <div class="content">{{content}}</div>
                    {{#if showFeedback}}
                        <div class="feedback">
                            <button class="thumbs-up" title="Helpful"><i class="fas fa-thumbs-up"></i></button>
                            <button class="thumbs-down" title="Not Helpful"><i class="fas fa-thumbs-down"></i></button>
                        </div>
                    {{/if}}
                </div>
            {{/each}}
            {{#if isTyping}}
                <div class="typing-indicator">
                    <span>Frinny is thinking</span>
                    <span class="dots">
                        <span>.</span><span>.</span><span>.</span>
                    </span>
                </div>
            {{/if}}
        </div>
        <div class="input-area">
            <input type="text" class="chat-input" placeholder="Ask Frinny..." />
            <button class="send-button">
                <i class="fas fa-paper-plane"></i>
            </button>
        </div>
    </div>
</div> 