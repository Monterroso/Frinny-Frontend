<div class="frinny-chat-container">
    <div class="avatar-panel">
        <img src="{{avatarUrl}}" alt="Frinny" class="frinny-avatar" />
        <button class="avatar-toggle" title="{{localize 'frinny.ui.toggleAvatar'}}">
            <i class="fas fa-chevron-left"></i>
        </button>
    </div>
    <div class="chat-panel">
        <div class="message-history">
            {{#each messages}}
                <div class="message {{type}}" data-message-id="{{messageId}}">
                    <div class="content">{{content}}</div>
                    {{#if showFeedback}}
                        <div class="feedback {{#if feedbackSubmitted}}submitted{{/if}} {{#if feedbackError}}error{{/if}}">
                            {{#if feedbackSubmitted}}
                                <div class="feedback-confirmation">{{localize 'frinny.ui.feedback.submitted'}}</div>
                            {{else if feedbackError}}
                                <div class="feedback-error">{{localize 'frinny.ui.feedback.error'}}</div>
                            {{else}}
                                <button class="thumbs-up" title="{{localize 'frinny.ui.feedback.helpful'}}"><i class="fas fa-thumbs-up"></i></button>
                                <button class="thumbs-down" title="{{localize 'frinny.ui.feedback.notHelpful'}}"><i class="fas fa-thumbs-down"></i></button>
                            {{/if}}
                        </div>
                    {{/if}}
                </div>
            {{/each}}
            {{#if isTyping}}
                <div class="typing-indicator">
                    <span>{{localize 'frinny.ui.typing'}}</span>
                    <span class="dots">
                        <span>.</span><span>.</span><span>.</span>
                    </span>
                </div>
            {{/if}}
        </div>
        <button class="scroll-to-bottom {{#if showScrollButton}}visible{{/if}}" title="{{localize 'frinny.ui.scrollToBottom'}}">
            <i class="fas fa-arrow-down"></i>
        </button>
        <div class="input-area">
            <input type="text" class="chat-input" placeholder="{{localize 'frinny.ui.placeholder'}}" />
            <button class="send-button">
                <i class="fas fa-paper-plane"></i>
            </button>
        </div>
    </div>
</div> 